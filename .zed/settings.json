{
    "formatter": "language_server",
    "format_on_save": "on",
    "language_servers": [
        "!eslint",
        "!oxc",
        "!typescript-language-server",
        "..."
    ],
    "languages": {
        "JavaScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "TypeScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "JSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "TSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "YAML": {
            "tab_size": 2
        },
        "JSON": {
            "tab_size": 4
        },
        "JSONC": {
            "tab_size": 4
        }
    },
    "lsp": {
        "typescript-language-server": {
            "settings": {
                "typescript": {
                    "preferences": {
                        "includePackageJsonAutoImports": "on"
                    }
                }
            }
        }
    }
}
